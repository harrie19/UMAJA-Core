# Production Environment Configuration
# Generated: 2026-01-03
# DO NOT commit sensitive credentials to version control

# Environment
DEBUG=False
ENVIRONMENT=production

# Application Settings
APP_NAME=UMAJA
APP_VERSION=1.0.0

# Security
SECRET_KEY=your-production-secret-key-here-change-this
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Database
DATABASE_URL=postgresql://user:password@production-db-host:5432/umaja_production
DATABASE_SSL_MODE=require
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis Cache
REDIS_URL=redis://production-redis-host:6379/0
CACHE_TTL=3600

# Email Configuration
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.production-mail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=noreply@yourdomain.com
EMAIL_HOST_PASSWORD=your-email-password-here

# Sales Feature
SALES_ENABLED=true

# API Settings
API_RATE_LIMIT=1000
API_TIMEOUT=30

# Logging
LOG_LEVEL=INFO
SENTRY_DSN=your-sentry-dsn-here

# Static and Media Files
STATIC_URL=/static/
MEDIA_URL=/media/
STATIC_ROOT=/var/www/umaja/static/
MEDIA_ROOT=/var/www/umaja/media/

# AWS S3 (if using for static/media files)
USE_S3=False
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=umaja-production
AWS_S3_REGION_NAME=us-east-1

# Session Security
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000

# Celery (if using for async tasks)
CELERY_BROKER_URL=redis://production-redis-host:6379/1
CELERY_RESULT_BACKEND=redis://production-redis-host:6379/2

# Monitoring
ENABLE_MONITORING=True
METRICS_EXPORT_INTERVAL=60
