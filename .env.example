# UMAJA v3 - Environment Variables Template
# Copy to .env and fill in your credentials

# PayPal
PAYPAL_MODE=sandbox
PAYPAL_CLIENT_ID=your_client_id_here
PAYPAL_SECRET=your_secret_here

# Social Media (Optional)
TWITTER_API_KEY=
TWITTER_API_SECRET=
TWITTER_ACCESS_TOKEN=
TWITTER_ACCESS_SECRET=
REDDIT_CLIENT_ID=
REDDIT_SECRET=
REDDIT_USERNAME=
REDDIT_PASSWORD=

# Application
ENVIRONMENT=development
DEBUG=True
LOG_LEVEL=INFO
DEFAULT_NOISE_LEVEL=0.5
CHARITY_PERCENTAGE=0.40

# ============================================
# MULTIMEDIA SYSTEM CONFIGURATION
# ============================================

# Voice Synthesis (Choose one or multiple)
ELEVENLABS_API_KEY=your_elevenlabs_key_here
GOOGLE_TTS_API_KEY=your_google_key_here
USE_OFFLINE_TTS=false

# Image Generation
STABILITY_AI_KEY=your_stability_key_here
USE_LOCAL_STABLE_DIFFUSION=false

# Video Generation
WAV2LIP_MODEL_PATH=models/wav2lip_gan.pth

# Social Media Auto-Posting (Optional)
TIKTOK_USERNAME=
TIKTOK_PASSWORD=
YOUTUBE_API_KEY=
INSTAGRAM_USERNAME=
INSTAGRAM_PASSWORD=
TWITTER_API_KEY=
TWITTER_API_SECRET=

# Worldtour Settings
WORLDTOUR_MODE=true
DAILY_POST_TIME=12:00
AUTO_POST_ENABLED=false
CITIES_PER_WEEK=7

# Monetization (Hidden until launch)
SALES_ENABLED=false
LAUNCH_DATE=2026-03-31
EARLY_ACCESS_ENABLED=true
EARLY_ACCESS_SLOTS=100
