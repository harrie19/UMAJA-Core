# ========================================
# UMAJA v3 - Environment Variables Template
# Copy to .env and fill in your credentials
# ========================================

# ========================================
# UMAJA v3 - Payment Configuration
# ========================================

# Your PayPal Account (REQUIRED)
PAYPAL_EMAIL=your-paypal@example.com

# PayPal API Credentials (get from developer.paypal.com)
PAYPAL_CLIENT_ID=your_client_id_here
PAYPAL_SECRET=your_secret_here
PAYPAL_MODE=sandbox  # Use 'sandbox' for testing, 'live' for production

# Charity Configuration (Optional - for your records)
CHARITY_NAME=Your Favorite Charity
CHARITY_WEBSITE=https://charity.org

# Email Notifications (Optional - for sending texts to customers)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@umaja.dev

# Server Configuration
SERVER_URL=http://localhost:5000
WEBHOOK_SECRET=change-this-to-random-string

# Social Media (Optional)
TWITTER_API_KEY=
TWITTER_API_SECRET=
TWITTER_ACCESS_TOKEN=
TWITTER_ACCESS_SECRET=
REDDIT_CLIENT_ID=
REDDIT_SECRET=
REDDIT_USERNAME=
REDDIT_PASSWORD=

# Application Settings
ENVIRONMENT=development
DEBUG=True
LOG_LEVEL=INFO
DEFAULT_NOISE_LEVEL=0.5
CHARITY_PERCENTAGE=0.40
