# UMAJA-Core Environment Configuration
# Copy this file to .env and customize as needed

# ============================================
# MINIMAL SETUP (Required for Deployment)
# ============================================
ENVIRONMENT=production
DEBUG=False
WORLDTOUR_MODE=true
SALES_ENABLED=false
USE_OFFLINE_TTS=true
PORT=5000

# Contact Information
CONTACT_EMAIL=Umaja1919@googlemail.com

# Railway Configuration (Optional)
RAILWAY_ENVIRONMENT=production

# =============================================================================
# ADDITIONAL CONFIGURATION (Optional)
# =============================================================================

# **REQUIRED** for Railway deployment
# PORT - Automatically set by Railway, do not override
# PORT=5000

# **REQUIRED** - Environment identifier
# Options: production, staging, development
# ENVIRONMENT=production

# **REQUIRED** - Python environment
# PYTHONUNBUFFERED=1

# =============================================================================
# MISSION CONFIGURATION
# =============================================================================

# Primary mission focus
# Options: daily_smile, community_engagement, content_creation
MISSION=daily_smile

# Content tone and style
# Options: warm, friendly, enthusiastic, thoughtful
CONTENT_TONE=warm

# =============================================================================
# PERSONALITY SETTINGS
# =============================================================================

# Default personality archetype
# Options: professor, worrier, enthusiast, random
DEFAULT_ARCHETYPE=random

# Enable personality rotation (cycles through archetypes)
ROTATE_ARCHETYPES=true

# =============================================================================
# CONTENT GENERATION
# =============================================================================

# Target content length (in seconds)
CONTENT_LENGTH_SECONDS=45

# Minimum content length
MIN_CONTENT_LENGTH=30

# Maximum content length
MAX_CONTENT_LENGTH=60

# Include community questions in every post
INCLUDE_ENGAGEMENT_QUESTIONS=true

# =============================================================================
# OUTPUT SETTINGS
# =============================================================================

# Output directory for generated content
OUTPUT_DIR=output/daily_smiles

# Default output format
# Options: text, json, markdown
OUTPUT_FORMAT=text

# Auto-save generated content
AUTO_SAVE=false

# Include timestamp in output
INCLUDE_TIMESTAMP=true

# =============================================================================
# COMMUNITY ENGAGEMENT
# =============================================================================

# Focus areas for community engagement
# Comma-separated list
ENGAGEMENT_FOCUS=connection,positivity,relatability,joy

# Enable community feedback collection
COLLECT_FEEDBACK=true

# =============================================================================
# SAFETY & ETHICS
# =============================================================================

# Strict mode: Prevents any content that could be seen as impersonation
STRICT_AUTHENTICITY_MODE=true

# Content review before posting (for production environments)
REQUIRE_REVIEW=false

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Debug mode (DO NOT enable in production)
DEBUG=false

# Verbose logging
VERBOSE=false

# Deployment and feature toggles
ENVIRONMENT=development
SALES_ENABLED=false

# Log file location
LOG_FILE=logs/umaja_core.log

# =============================================================================
# API CONFIGURATION (Optional)
# =============================================================================

# API key for external services (if needed)
# API_KEY=your_api_key_here

# Webhook URL for notifications (if needed)
# WEBHOOK_URL=https://your-webhook-url.com

# =============================================================================
# RAILWAY-SPECIFIC NOTES
# =============================================================================
#
# When deploying to Railway:
# 1. PORT is automatically set by Railway - do not override
# 2. Set ENVIRONMENT=production in Railway dashboard
# 3. PYTHONUNBUFFERED=1 ensures logs appear in Railway console
# 4. Health check endpoint: /health
# 5. Version info endpoint: /version
# 6. Deployment info endpoint: /deployment-info
#
# =============================================================================
# NOTES
# =============================================================================
# 
# This configuration emphasizes:
# - Warmth and friendliness in all content
# - Community engagement through questions
# - Authentic archetypes instead of impersonations
# - Focus on putting smiles on faces
# 
# Remember: Our mission is to spread joy through genuine connection!
# =============================================================================
