# UMAJA v3 - Environment Variables Template
# Copy to .env and fill in your credentials

# ===== PAYMENT PROCESSING (REQUIRED) =====
# PayPal Configuration
PAYPAL_MODE=sandbox
PAYPAL_CLIENT_ID=your_client_id_here
PAYPAL_SECRET=your_secret_here

# ===== REVENUE DISTRIBUTION ACCOUNTS (REQUIRED) =====
# PayPal email addresses for fund distribution
CHARITY_PAYPAL_EMAIL=charity@example.com
OPERATIONS_PAYPAL_EMAIL=operations@example.com
UPGRADES_PAYPAL_EMAIL=upgrades@example.com

# ===== EMAIL DELIVERY (REQUIRED) =====
# SMTP Configuration for sending texts to customers
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
FROM_EMAIL=noreply@yourdomain.com

# ===== WEB SERVER (REQUIRED for webhooks) =====
# Your server's public URL
SERVER_URL=https://yourdomain.com
WEBHOOK_SECRET=generate_random_secret_here

# ===== OPTIONAL: GUMROAD ALTERNATIVE =====
# Simple alternative to PayPal direct integration
GUMROAD_PRODUCT_ID=
GUMROAD_WEBHOOK_SECRET=

# ===== SOCIAL MEDIA (OPTIONAL) =====
TWITTER_API_KEY=
TWITTER_API_SECRET=
TWITTER_ACCESS_TOKEN=
TWITTER_ACCESS_SECRET=
REDDIT_CLIENT_ID=
REDDIT_SECRET=
REDDIT_USERNAME=
REDDIT_PASSWORD=

# ===== APPLICATION SETTINGS =====
ENVIRONMENT=development
DEBUG=True
LOG_LEVEL=INFO
DEFAULT_NOISE_LEVEL=0.5
CHARITY_PERCENTAGE=0.40
