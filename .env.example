# ============================================
# UMAJA WORLDTOUR - Environment Configuration
# ============================================
# Copy to .env and customize as needed
#
# CURRENT MODE: WORLDTOUR ONLY (No Payments)
# The system generates daily comedy content about cities worldwide
# Payment functionality is disabled until audience is built
# ============================================

# --------------------------------------------
# üåç WORLDTOUR CONFIGURATION (ACTIVE)
# --------------------------------------------
# These settings control the viral marketing campaign
# where 3 AI comedians tour 50+ cities worldwide

WORLDTOUR_MODE=true
WORLDTOUR_DAILY_POST=true
DAILY_POST_TIME=12:00
AUTO_POST_ENABLED=false
CITIES_PER_WEEK=7

# Voice Synthesis - Works WITHOUT API keys
USE_OFFLINE_TTS=true
# Optional: Uncomment for higher quality voices (requires API keys)
# ELEVENLABS_API_KEY=your_elevenlabs_key_here
# GOOGLE_TTS_API_KEY=your_google_key_here

# Image Generation - Basic mode works without API keys
# Optional: Uncomment for AI-generated images (requires API key)
# STABILITY_AI_KEY=your_stability_key_here
# USE_LOCAL_STABLE_DIFFUSION=false

# Video Generation - Basic settings (no API keys required)
# WAV2LIP_MODEL_PATH=models/wav2lip_gan.pth

# Social Media Auto-Posting (Optional - for automation)
# TIKTOK_USERNAME=
# TIKTOK_PASSWORD=
# YOUTUBE_API_KEY=
# INSTAGRAM_USERNAME=
# INSTAGRAM_PASSWORD=
# TWITTER_API_KEY=
# TWITTER_API_SECRET=
# TWITTER_ACCESS_TOKEN=
# TWITTER_ACCESS_SECRET=
# REDDIT_CLIENT_ID=
# REDDIT_SECRET=
# REDDIT_USERNAME=
# REDDIT_PASSWORD=

# --------------------------------------------
# üí∞ PAYMENT SYSTEM (DISABLED)
# --------------------------------------------
# Payment functionality is turned OFF during the Worldtour phase
# This will be enabled later after building an audience

SALES_ENABLED=false
LAUNCH_DATE=2026-03-31
EARLY_ACCESS_ENABLED=false
EARLY_ACCESS_SLOTS=100

# PayPal - Not used while SALES_ENABLED=false
# PAYPAL_MODE=sandbox
# PAYPAL_CLIENT_ID=your_client_id_here
# PAYPAL_SECRET=your_secret_here

